---
resolve_dns: {{ OXIDIZED_RESOLVE_DNS }}
interval: {{ OXIDIZED_INTERVAL }}
use_syslog: {{ OXIDIZED_USE_SYSLOG }}
threads: {{ OXIDIZED_THREADS }}
timeout: {{ OXIDIZED_TIMEOUT }}
retries: {{ OXIDIZED_RETRIES }}
prompt: {{ OXIDIZED_PROMPT }}
rest: {{ OXIDIZED_LISTEN_IF }}:{{ OXIDIZED_LISTEN_PORT }}
next_adds_job: {{ OXIDIZED_NEXT_ADDS_JOB }}

# Hide secrets
rest_hide_enable: {{ OXIDIZED_HIDE_SECRETS }}
vars: 
  remove_secret: {{ OXIDIZED_HIDE_SECRETS }}
{% if OXIDIZED_HIDE_SECRETS_IOS_RBAC | lenght > 0 %}
  ios_rbac: {{ OXIDIZED_HIDE_SECRETS_IOS_RBAC }}
{% endif %}

{% if OXIDIZED_SSH_USERNAME | length > 0 %}
# Default SSH login
username: {{ OXIDIZED_SSH_USERNAME }}
{% if OXIDIZED_SSH_PASSWORD | lenght > 0 %}
password: {{ OXIDIZED_SSH_PASSWORD }}
{% endif %}
{% endif %}

{% if OXIDIZED_INPUT | length > 0 %}
# Input settings
input:
{% for inputs in OXIDIZED_INPUT %}
{{ outputs }}
{% endfor %}
{% endif %}

{% if OXIDIZED_SOURCE | length > 0 %}
# Device database
source:
{% for sources in OXIDIZED_SOURCE %}
{{ sources }}
{% endfor %}
{% endif %}

{% if OXIDIZED_OUTPUT | length > 0 %}
# Output settings
output:
{% for outputs in OXIDIZED_OUTPUT %}
{{ outputs }}
{% endfor %}
{% endif %}

{% if OXIDIZED_HOOKS | length > 0 %}
# Hooks to execute on changes
hooks:
{% for hooks in OXIDIZED_HOOKS %}
{{ hooks }}
{% endfor %}
{% endif %}
